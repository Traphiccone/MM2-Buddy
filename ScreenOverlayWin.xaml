<Window x:Class="MM2Buddy.ScreenOverlayWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MM2Buddy"
        mc:Ignorable="d"
        Icon="/Logo32.ico" 
        Title="ScreenOverlayWin" ResizeMode="NoResize" Background="#FF2FAB16" Height="Auto" Width="Auto" SizeToContent="WidthAndHeight">
    <!--<Window.Background>
        <SolidColorBrush Color="Transparent" Opacity="0"/>
    </Window.Background>-->
    <Grid x:Name="mainGrid" Width="960" Height="540" >
        <TextBlock x:Name="codeBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Text="" FontSize="18" Margin="0,0,0,0"/>
        <TextBlock x:Name="nameBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Text="" FontSize="18" Margin="0,0,0,0"/>
        <TextBlock x:Name="creatorBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Text="" FontSize="18" Margin="0,0,0,0"/>
        <TextBlock x:Name="timeBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Text="" FontSize="18" Margin="0,0,0,0"/>
        <TextBlock x:Name="deathBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Text="" FontSize="18" Margin="0,0,0,0"/>
        <Image x:Name="streamOverlayOut" Stretch="None" OpacityMask="#0055FF47"/>
    </Grid>
</Window>
